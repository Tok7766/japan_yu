<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col">
     <h2 class="mt-3">投稿一覧</h2>
    </div>
  
  <table class='table table-hover table-inverse'>
  <thead>
    <tr>
     <th>投稿ID</th>
     <th>画像</th>
     <th>タイトル</th>
     <th>本文</th>
     <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @post_images.each do |post_image| %>
     <tr>
       <td><%= post_image.id %></td>
       <td>
         <%= link_to admin_post_image_path(post_image.id) do %>
          <% if post_image.image.attached? %>
           <%= image_tag post_image.image, size: "100x100" %>
          <% else %>
           <%= image_tag 'no_image', size: "100x100" %>
          <% end %>
         <% end %>
       </td>
       <td><%= post_image.title %></td>
       <td><%= post_image.body %></td>
     </tr>
    <% end %>
  </tbody>
  </table>
 </div>
</div>