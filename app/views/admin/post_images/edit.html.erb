<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h2 class="mt-3">投稿記事編集画面</h2>
      <%= form_with model:@post_image,url: admin_post_image_path(@post_image), method: :patch do |f| %>
     <div class="form-group">
      <h6>タイトル</h6>
      <%= f.text_field :title %>
     </div>
     <div class="form-group">
      <h6>本文</h6>
      <%= f.text_area :body %>
     </div>
     <div class="form-group">
      <h6>画像</h6>
      <%= f.file_field :image, accept: "image/*" %>
     </div>
     <div class="form-group">
      <%= f.submit "送信する" , class: 'btn btn-dark btn-block' %>
     </div>
     <% end %>
    </div>
  </div>
</div> 