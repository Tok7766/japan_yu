<div class='container'>
  <div class='row justify-content-center'>
    <div class="col-md-5">
       <h2 class="mt-3 text-center">投稿詳細</h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6">
    　<table class="table table-hover table-inverse">
        <tr>
         <td>投稿ID</td>
         <td><%= @post_image.id %></td>
        </tr>
        <tr>
         <td>投稿画像</td>
         <td>
          <%= image_tag @post_image.get_image, size:'100x100' %>
         </td>
        </tr>
        <tr>
         <td>タイトル</td>
         <td><%= @post_image.title %></td>
        </tr>
        <tr>
         <td>本文</td>
         <td><%= @post_image.body %></td>
        </tr>
        <tr>
          <td>ユーザー名</td>
          <td><%= @post_image.customer.name %></td>
        </tr>
    　</table>
    </div>
  </div>
  <div class="row justify-content-center">
   <div class="mr-5">
    <%= link_to "編集する", edit_admin_post_image_path(@post_image) , class: "btn btn-dark" %>
   </div>
   <div class="ml-5">
    <%= link_to '削除する', admin_post_image_path(@post_image), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-outline-dark"%>
   </div>
  </div>
</div>