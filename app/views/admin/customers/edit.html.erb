<div class="container">
    <div class="row mt-3 justify-content-center">
        <h2><%= @customer.name %>さんの会員情報編集</h2>
    </div>

    <%= form_with model:@customer, url: admin_customer_path(@customer), method: :patch do |f| %>
    <div class="form-group row justify-content-center">
        <label class="col-lg-3">ユーザー名</label>
        <div class="col-lg-3">
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label class="col-lg-3">プロフィール画像</label>
        <div class="col-lg-3">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label class="col-lg-3">自己紹介</label>
        <div class="col-lg-3">
          <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
        </div>
    </div>
    <div class="form-group row justify-content-center">
        <label class="col-lg-3">会員ステータス</label>
        <div class="col-lg-3">
           <%= f.radio_button :is_deleted, false %>有効
           <%= f.radio_button :is_deleted, true %>退会
        </div>
        
    </div>
    <div class="form-group row justify-content-center">
      <div class="actions col-lg-3">
        <%= f.submit "変更を保存" , class: "btn btn-dark" %>
      </div>
    </div>
    <% end %>
</div>