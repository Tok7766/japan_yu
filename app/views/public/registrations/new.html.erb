<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h2 class="mt-3 mb-3 text-center">新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="form-group row justify-content-center">
       <label class="col-lg-3">ユーザー名</label>
       <div class="col-lg-3">
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
       </div>
      </div>

      <div class="form-group row justify-content-center">
       <label class="col-lg-3">プロフィール画像</label>
       <div class="col-lg-3">
        <%= f.file_field :image, accept: "image/*" %>
       </div>
      </div>

      <div class="form-group row justify-content-center">
       <label class="col-lg-3">メールアドレス</label>
       <div class="col-lg-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
       </div>
      </div>

      <div class="form-group row justify-content-center">
       <label class="col-lg-3">自己紹介</label>
       <div class="col-lg-3">
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
       </div>
      </div>

      <div class="form-group row justify-content-center">
       <label class="col-lg-3">パスワード
       <% if @minimum_password_length %>
    　 (<%= @minimum_password_length %>文字以上)
    　 <% end %>
    　 </label>
       <div class="col-lg-3">
    　　<%= f.password_field :password, autocomplete: "new-password" %>
       </div>
      </div>

      <div class="form-group row justify-content-center">
       <label class="col-lg-3">パスワード確認用</label>
       <div class="col-lg-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
       </div>
      </div>

      <div class="row justify-content-center">
       <%= f.submit "新規登録", class: "btn btn-dark" %>
    　</div>
    　<% end %>
    </div>
  </div>
</div>
