<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h2 class="mt-3 mb-3 text-center">ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group row justify-content-center">
       <label class="col-lg-4">メールアドレス</label>
       <div class="col-lg-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
       </div>
      </div>

      <div class="form-group row justify-content-center">
       <label class="col-lg-4">パスワード</label>
       <div class="col-lg-4">
        <%= f.password_field :password, autocomplete: "current-password" %>
       </div>
      </div>

      <div class="row justify-content-center">
        <%= f.submit "ログイン", class: "btn btn-dark" %>
      </div>
      <% end %>
      <div class="row mt-3 justify-content-center">
        <%= link_to 'ゲストログインはこちら', '/guest_sign_in', method: :post %>
      </div>

    </div>
  </div>
</div>
