<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h2 class="mt-3">会員情報編集</h2>
      <% if @customer.errors.any? %>
      <%= @customer.errors.count %>件のエラーが発生しました
      <div>
       <% @customer.errors.full_messages.each do |message| %>
       <p><%= message %></p>
       <% end %>
      </div>
      <% end %>
      <%= form_with model:@customer, method: :patch do |f| %>

      <div class="form-group row">
      <label class="col-lg-4">ユーザー名</label>
       <div class="col-lg-4">
       <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
       </div>
      </div>

      <div class="form-group row">
      <label class="col-lg-4">プロフィール画像</label>
       <div class="col-lg-4">
        <%= f.file_field :profile_image, accept: "image/*" %>
       </div>
      </div>

      <div class="form-group row">
      <label class="col-lg-4">メールアドレス</label>
       <div class="col-lg-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
       </div>
      </div>

      <div class="form-group row">
      <label class="col-lg-4">自己紹介</label>
       <div class="col-lg-4">
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
       </div>
      </div>
      <div class="row justify-content-center">
        <div class="mr-5">
         <%= f.submit "編集内容を保存", class: "btn btn-dark btn-block w-100" %>
        </div>
        <div class="ml-5">
         <%= link_to " 退会画面へ進む " , unsubscribe_path, class: "btn btn-outline-dark btn-block w-100" %>
        </div>
      </div>
     <% end %>
    </div>
  </div>
</div>
