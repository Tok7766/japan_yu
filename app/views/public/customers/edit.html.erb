<h1>会員情報編集</h1>
<%= form_with model:@customer, method: :patch do |f| %>

<div class="form-group row">
  <label class="col-lg-3">ユーザーネーム</label>
   <div class="col-lg-3">
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
   </div>
</div>

<div class="form-group row">
  <label class="col-lg-3">プロフィール画像</label>
   <div class="col-lg-3">
      <%= f.file_field :image, accept: "image/*" %>
   </div>
</div>

<div class="form-group row">
  <label class="col-lg-3">メールアドレス</label>
   <div class="col-lg-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
   </div>
</div>

<div class="form-group row">
  <label class="col-lg-3">自己紹介</label>
   <div class="col-lg-3">
      <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
   </div>
</div>

<div class="form-group row">
  <label class="col-lg-3">メールアドレス</label>
   <div class="col-lg-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
   </div>
</div>

<div class="form-group row">
  <div>
    <%= f.submit "編集内容を保存", class: "btn btn-outline-info" %>
  </div>
  <div>
    <%= link_to "退会する" , unsubscribe_path, class: "btn btn-outline-danger" %>
  </div>
</div>
<% end %>