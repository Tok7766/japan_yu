<div class='container mt-3'>
  <div class='row'>
    <div class='col-md-3'>
     <h2>会員情報</h2>
     <%= render 'public/customers/info' , customer: @post_image.customer %>
    </div>
    <div class='col-md-6'>
      <h2>投稿詳細</h2>
      <% if @post_image.image.attached? %>
        <%= image_tag @post_image.image, size: "200x200" %>
      <% else %>
        <%= image_tag 'no_image', size: "500x400" %>
      <% end %>        
    </div>
    <div class="col-md-3">
      <div class="mt-5">
       <%= link_to (@post_image.customer) do %>
        <%= image_tag @post_image.customer.get_profile_image, size:'70x70', class:"rounded-circle" %>
       <% end %>
      </div>
       <h4 class="mt-2"><%= @post_image.title %></h4>
       <div class="box">
         <p><%=safe_join(@post_image.body.split("\n"),tag(:br))%></p>
       </div>
       
       <div class="mt-2">
         <% if @post_image.customer == current_customer %>
          <%= link_to '編集', edit_post_image_path(@post_image), class: "btn btn-sm btn btn-outline-dark" %>
          <%= link_to '削除', @post_image, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-dark"%>
         <% end %>
         <div class="mt-3">
          <%= render 'public/favorites/btn' , post_image: @post_image %>
         </div>
       </div>
    </div>
    <div class="col-md-3"></div>
    <div class="col-md-9 mt-3">
      <div id="comment_area">
        <%= render "public/post_image_comments/index", post_image: @post_image %>
      </div>
      <div id="new-comment">
        <%= render "public/post_image_comments/form", post_image: @post_image, post_image_comment: @post_image_comment %>
      </div>
    </div>  
    </div>
  </div>
</div>
