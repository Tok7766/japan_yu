<%= form_with model:post_image,local:true do |f| %>
  <div class="form-group">
    <h4>タイトル</h4>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <h4>本文</h4>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <h4>画像</h4>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
