<div class="card-list-container py-5">
  <h2 class="text-center">投稿一覧</h2>
  <% @post_images.each do |post_image| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to post_image_path(post_image.id) do %>
     <% if post_image.image.attached? %>
        <%= image_tag post_image.image, size: "200x200" %>
       <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
       <% end %>
      <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-10">
          <h5 class="card-title">
            <span><%= post_image.title %></span>
          </h5>
          <p class="card-text">
            <span><%= post_image.body %></span>
          </p>
        </div>
        <div class="col-2">
          <%= link_to (post_image.customer) do %>
           <%= image_tag post_image.customer.get_profile_image, size:'100x100', class:"mt-3 rounded-circle" %>
          <% end %>
        </div>
        <div><%= render 'public/favorites/btn' , post_image: post_image %></div>
        <div>コメント数: <%= post_image.post_image_comments.count %></div>
      </div>
    </div>
  </div>
  <% end %>
</div>
