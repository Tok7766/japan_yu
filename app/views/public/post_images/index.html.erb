<div class="container">
  <h2 class="text-center mt-3">投稿一覧</h2>
  <div class="row">
    <% @post_images.each do |post_image| %>
    <div class="col-md-3">
      <div class="card mb-5 shadow-sm">
        <div class="card w-100 h-100">
          <%= link_to post_image_path(post_image.id) do %>
          <% if post_image.image.attached? %>
           <%= image_tag post_image.image, size:'200x200', class:"card-img-top"; %>
          <% else %>
           <%= image_tag 'no_image', size:'200x200',class:"card-img-top"; %>
          <% end %>
          <% end %>
        </div>
        
        <div class="card-body">
          <h6><%= post_image.title %></h6>
          <p><%= post_image.body %></p>
          <div class="text-dark"><%= render 'public/favorites/btn' , post_image: post_image %></div>
          <div class="text-dark">コメント数: <%= post_image.post_image_comments.count %></div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

  
          

